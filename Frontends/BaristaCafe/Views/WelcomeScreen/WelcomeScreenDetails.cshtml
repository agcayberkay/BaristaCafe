@model WelcomeScreen

@{
    ViewData["Title"] = "WelcomeScreen Güncelle";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="main-panel py-5">
    <div class="container" style="max-width: 600px;">
        <div class="card shadow rounded">
            <div class="card-header bg-primary text-white text-center">
                <h3 class="mb-0">Slider Güncelle</h3>
            </div>
            <div class="card-body">
                <form asp-action="UpdateWS" method="post" novalidate>
                    <input type="hidden" asp-for="WelcomeScreenId" />

                    <div class="mb-4">
                        <label asp-for="Title" class="form-label fw-semibold">Başlık</label>
                        <input asp-for="Title" class="form-control" placeholder="Başlık giriniz" />
                        <span asp-validation-for="Title" class="text-danger small"></span>
                    </div>

                    <div class="mb-4">
                        <label asp-for="Name" class="form-label fw-semibold">İsim</label>
                        <input asp-for="Name" class="form-control" placeholder="İsim giriniz" />
                        <span asp-validation-for="Name" class="text-danger small"></span>
                    </div>

                    <div class="mb-4">
                        <label asp-for="Desc" class="form-label fw-semibold">Açıklama</label>
                        <textarea asp-for="Desc" class="form-control" rows="5" placeholder="Açıklama giriniz"></textarea>
                        <span asp-validation-for="Desc" class="text-danger small"></span>
                    </div>

                    <button type="submit" class="btn btn-success w-100 py-2 fw-semibold">Güncelle</button>
                </form>
            </div>
        </div>
    </div>
</div>
