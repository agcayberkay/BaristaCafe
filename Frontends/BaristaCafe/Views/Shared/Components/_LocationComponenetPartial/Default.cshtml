@model List<Location>
@foreach (var item in Model)
{

    <div class="col-lg-4 col-12 me-auto">
        <em class="text-white d-block mb-4">Bizi nerede bulabilirsin?</em>

        <strong class="text-white">
            <i class="bi-geo-alt me-2"></i>
            @item.Address
        </strong>

        @await Component.InvokeAsync("_SocailMediaComponenetPartial")

    </div>

    <div class="col-lg-3 col-12 mt-4 mb-3 mt-lg-0 mb-lg-0">
        <em class="text-white d-block mb-4">İletişim</em>

        <p class="d-flex mb-1">
            <strong class="me-2">Telefon: @item.Phone</strong>
            <a href="tel: @item.Phone" class="site-footer-link">
            </a>
        </p>

        <p class="d-flex">
            <strong class="me-2">Email:</strong>

            <a href="mailto: @item.Email" class="site-footer-link">
                @item.Email
            </a>
        </p>

    </div>
}