@model BaristaWithBaristaDesc

<section class="barista-section section-padding section-bg" id="barista-team">
    <div class="container">

        <div class="row justify-content-center">

            <div class="col-lg-12 col-12 text-center mb-4 pb-lg-2">
                <em class="text-white">@Model.BaristaDesc.Title</em>

                <h2 class="text-white">@Model.BaristaDesc.BigTitle</h2>
            </div>
            @foreach (var item in Model.Baristas)
            {
                <div class="col-lg-3 col-md-6 col-12 mb-4">
                    <div class="team-block-wrap">
                    <div class="team-block-info d-flex flex-column">
                        <div class="d-flex mt-auto mb-3">
                            <h4 class="text-white mb-0">@item.Name</h4>

                            <p class="badge ms-4"><em>@item.Grade</em></p>
                        </div>

                        <p class="text-white mb-0">@item.Desc</p>
                    </div>

                    <div class="team-block-image-wrap">
                        <img src="@item.ImageUrl" class="team-block-image img-fluid" alt="">
                    </div>
                </div>
            </div>
            }
        </div>
        
    </div>
</section>
