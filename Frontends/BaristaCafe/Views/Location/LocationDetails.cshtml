@{
    ViewData["Title"] = "LocationDetails";
    Layout = "~/Views/Layout/Index.cshtml";
}

@model List<Location>
<div class="main-panel">
    <h2>Lokasyon İşlemleri</h2>

    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>Adres</th>
                <th>Telefon</th>
                <th>Email</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @if (!Model.Any())
            {
                <tr>
                    <td colspan="6" class="text-center">Kayıt bulunamadı.</td>
                </tr>
            }
            else
            {
                foreach (var loc in Model)
                {
                    <tr>
                        <td>@loc.Address</td>
                        <td>@loc.Phone</td>
                        <td>@loc.Email</td>
                        <td>
                            <a href="@Url.Action("UpdateLocation", "Location", new { id = loc.LocationId })" class="btn btn-sm btn-warning">Düzenle</a>                   
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>

</div>