@model List<SocailMedia>

@{
    ViewData["Title"] = "SocailMediaDetails";
    Layout = "~/Views/Layout/Index.cshtml";
}


<div class="main-panel">
<h2>Sosyal Medya Listesi</h2>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>#</th>
            <th>Ad</th>
            <th>URL</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @if (!Model.Any())
        {
            <tr>
                <td colspan="4" class="text-center">Kayıt bulunamadı.</td>
            </tr>
        }
        else
        {
            int i = 1;
            foreach (var item in Model)
            {
                <tr>
                    <td>@i</td>
                    <td>@item.Name</td>
                    <td>
                        <a href="@item.Url" target="_blank" rel="noopener noreferrer">@item.Url</a>
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.SocailMediaId" class="btn btn-sm btn-warning">Düzenle</a>
                        <a asp-action="Delete" asp-route-id="@item.SocailMediaId" class="btn btn-sm btn-danger" onclick="return confirm('Silmek istediğinize emin misiniz?');">Sil</a>
                    </td>
                </tr>
                i++;
            }
        }
    </tbody>
</table>
</div>