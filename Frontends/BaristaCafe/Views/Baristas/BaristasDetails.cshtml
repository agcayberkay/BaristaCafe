@model List<Baristas>
@{
    ViewData["Title"] = "BaristasDetails";
    Layout = "~/Views/Layout/Index.cshtml";
}
<div class="main-panel">

<h2 class="mb-4">Barista Listesi</h2>


<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>Fotoğraf</th>
            <th>Ad Soyad</th>
            <th>Ünvan</th>
            <th>Açıklama</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count == 0)
        {
            <tr>
                <td colspan="6" class="text-center">Kayıt bulunamadı.</td>
            </tr>
        }
        else
        {
            foreach (var barista in Model)
            {
                <tr>
                    <td>
                        <img src="@barista.ImageUrl" alt="@barista.Name" class="img-thumbnail" style="width: 60px; height: 60px; object-fit: cover;" />
                    </td>
                    <td>@barista.Name</td>
                    <td>@barista.Grade</td>
                    <td>@barista.Desc</td>
                    <td>
                        <a href="@Url.Action("EditBarista", "Baristas", new { id = barista.BaristasId })" class="btn btn-sm btn-warning">Düzenle</a>
                            <a href="@Url.Action("Delete", "Baristas", new { id = barista.BaristasId })"
                               class="btn btn-sm btn-danger"
                               onclick="return confirm('Silmek istediğinize emin misiniz?');">
                                Sil
                            </a>
                    </td>
                </tr>
            }
        }
    </tbody>
        
</table>
<br></br>
    <a href="/Baristas/CreateBarista/" class="btn btn-success">+ Yeni Barista Ekle</a>
</div>

