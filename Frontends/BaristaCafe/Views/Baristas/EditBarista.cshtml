@model Baristas
@{
    ViewData["Title"] = "EditBarista";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="main-panel">

<h2>Barista Düzenle</h2>

<form asp-action="EditBarista" method="post">
    <input type="hidden" asp-for="BaristasId" />

    <div class="form-group">
        <label>Ad Soyad</label>
        <input asp-for="Name" class="form-control" />
    </div>

    <div class="form-group">
        <label>Seviye</label>
        <input asp-for="Grade" class="form-control" />
    </div>

    <div class="form-group">
        <label>Açıklama</label>
        <textarea asp-for="Desc" class="form-control"></textarea>
    </div>

    <div class="form-group">
        <label>Resim URL</label>
        <input asp-for="ImageUrl" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Güncelle</button>
    <a asp-action="BaristasDetails" class="btn btn-secondary ml-2">İptal</a>
</form>
</div>